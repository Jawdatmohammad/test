#include <iostream>
using namespace std;
int main() {
    int num;
cout << "your number \n";
cin >> num;
if(num==0)
cout << "your number is 0 \n";
else{
    if(num<0)
    num = -1*num;
    int i =0;
    while(num>0){
        num /= 10;
        i++;
    }
    cout << "your number had a "<< i << " digits";
}

    return 0;
}
